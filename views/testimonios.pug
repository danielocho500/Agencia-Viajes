extends ./layout/index

block contenido
    main.container.mt-5      
        h1.text-center #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
            include ./layout/bloqueTestimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial 
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholdedr="Tu nombre", name="nombre", class="form-control" value= nombre)
                        .form-group
                            label(for="correo") Correo electronico
                            input#nombre(type="text", placeholdedr="Tu correo", name="correo", class="form-control" value= correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(class="form-control",type="text", placeholdedr="Tu Mensaje", name="mensaje", rows=3)=mensaje
                        input.btn.btn-success.btn-block(type="submit")